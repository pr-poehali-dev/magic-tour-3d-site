{
  "tests": [
    {
      "name": "Test OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "Test booking with all fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест Тестов",
        "phone": "+79001234567",
        "email": "test@example.com",
        "tourType": "Рафтинг",
        "people": "2",
        "date": "2024-12-25",
        "message": "Хотим экстремальный тур"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test booking without optional fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Петров",
        "phone": "+79999999999",
        "tourType": "Треккинг"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test booking missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
